extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1 #{project[id].project_name}

        p #{project[id].description}

      .project-tech-links-box.box
        h6 Technology
        ul
          each technology in project[id].technologies 
            li #{technology}

        a.btn-link(href=`${project[id].live_link}` target='_blank') Live Demo
        a.btn-link(href=`${project[id].github_link}` target='blank') GitHub Repo

    .project-img-box.box

      img.project-img(src=`/static/${project[id].image_urls[1]}`, alt=`${project[id].description}`)
      img.project-img(src=`/static/${project[id].image_urls[2]}`, alt=`${project[id].description}`)
      img.project-img(src=`/static/${project[id].image_urls[3]}`, alt=`${project[id].description}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
